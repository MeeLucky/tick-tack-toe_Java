<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mainLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="0px"
    android:padding="0px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Рестарт"
            android:textSize="35dp"
            android:background="#d7d7d7"
            android:id="@+id/restart"
            android:onClick="restart"/>

        <TextView
            android:id="@+id/mainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:layout_margin="0px"
            android:text="Ход игрока Х"
            android:textAlignment="center"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="127dp"
            android:layout_weight="1"
            android:padding="0px"
            android:background="@drawable/back"
            android:tag="1"
            android:layout_margin="0px"
            android:onClick="btnClick"
            tools:ignore="ButtonStyle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0px"
            android:layout_weight="1"
            android:background="@drawable/back"
            android:onClick="btnClick"
            android:padding="0px"
            android:tag="2"
            android:text=""
            android:textSize="127dp" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="127dp"
            android:layout_weight="1"
            android:padding="0px"
            android:background="@drawable/back"
            android:tag="3"
            android:layout_margin="0px"
            android:onClick="btnClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="127dp"
            android:layout_weight="1"
            android:padding="0px"
            android:background="@drawable/back"
            android:tag="4"
            android:layout_margin="0px"
            android:onClick="btnClick"/>

         <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="127dp"
            android:layout_weight="1"
            android:padding="0px"
            android:background="@drawable/back"
            android:tag="5"
            android:layout_margin="0px"
            android:onClick="btnClick"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="127dp"
            android:layout_weight="1"
            android:padding="0px"
            android:background="@drawable/back"
            android:tag="6"
            android:layout_margin="0px"
            android:onClick="btnClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="127dp"
            android:layout_weight="1"
            android:padding="0px"
            android:background="@drawable/back"
            android:tag="7"
            android:layout_margin="0px"
            android:onClick="btnClick"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="127dp"
            android:layout_weight="1"
            android:padding="0px"
            android:background="@drawable/back"
            android:tag="8"
            android:layout_margin="0px"
            android:onClick="btnClick"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textSize="127dp"
            android:layout_weight="1"
            android:padding="0px"
            android:background="@drawable/back"
            android:tag="9"
            android:layout_margin="0px"
            android:onClick="btnClick"/>
    </LinearLayout>

</LinearLayout>